<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/item_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/item_quantity_edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/item_name_edit_text"
        android:layout_marginTop="16dp"
        android:hint="Quantity"
        android:inputType="number" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_quantity_edit_text"
        android:layout_marginTop="16dp"
        android:text="Add Item" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_button"
        android:layout_marginTop="16dp"
        android:text="Update Item" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_button"
        android:layout_marginTop="16dp"
        android:text="Delete Item" />

    <TextView
        android:id="@+id/display_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_button"
        android:layout_marginTop="16dp"
        android:text="Items:"
        android:textSize="16sp" />

</RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>